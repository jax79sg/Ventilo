                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/elements_margin_spacing">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/img_sitrep_photo_gallery"
                        android:layout_width="@dimen/sitrep_picture_icon_width"
                        android:layout_height="@dimen/sitrep_picture_icon_height"
                        android:layout_marginEnd="@dimen/elements_margin_spacing"
                        app:srcCompat="@drawable/btn_photo_gallery" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/img_sitrep_open_camera"
                        android:layout_width="@dimen/sitrep_picture_icon_width"
                        android:layout_height="@dimen/sitrep_picture_icon_height"
                        app:srcCompat="@drawable/btn_open_camera" />

                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/layout_sitrep_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
