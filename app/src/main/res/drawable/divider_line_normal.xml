<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- draw a 1 dp width border around the rectangle shape -->
            <stroke android:color="@color/background_3rd_level_chinese_silver" android:width="3dp"/>
        </shape>
    </item>
    <!--
        hide left, top and right side border using white color
        by padding 1 dp bottom side
    -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_main_black"/>
        </shape>
    </item>
</layer-list>