                <!--<android.support.v7.widget.AppCompatImageView-->
                <!--android:id="@+id/img_ship_blueprint_zeroButton"-->
                <!--android:layout_width="@dimen/map_blueprint_btn_width"-->
                <!--android:layout_height="@dimen/map_blueprint_btn_height"-->
                <!--android:layout_below="@+id/img_ship_blueprint_upButton"-->
