<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_map_ship_blueprint_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/bft_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/elements_vertical_margin_spacing">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_btn_ship_blueprint_setting"
                    android:layout_width="@dimen/map_blueprint_btn_width"
                    android:layout_height="@dimen/map_blueprint_btn_height"
                    android:background="?android:selectableItemBackground"
                    app:srcCompat="@drawable/btn_setting" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_btn_ship_blueprint_world_map"
                    android:layout_width="@dimen/map_blueprint_btn_width"
                    android:layout_height="@dimen/map_blueprint_btn_height"
                    android:layout_below="@+id/img_btn_ship_blueprint_setting"
                    android:layout_marginTop="@dimen/elements_vertical_margin_spacing"
                    android:background="?android:selectableItemBackground"
                    app:srcCompat="@drawable/btn_world_map" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_ship_blueprint_upButton"
                    android:layout_width="@dimen/map_blueprint_btn_width"
                    android:layout_height="@dimen/map_blueprint_btn_height"
                    android:background="?android:selectableItemBackground"
                    app:srcCompat="@drawable/btn_map_toggle_up" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_ship_blueprint_zeroButton"
                    android:layout_width="@dimen/map_blueprint_btn_width"
                    android:layout_height="@dimen/map_blueprint_btn_height"
                    android:layout_below="@+id/img_ship_blueprint_upButton"
                    android:layout_marginTop="@dimen/elements_vertical_margin_spacing"
                    android:background="?android:selectableItemBackground"
                    app:srcCompat="@drawable/btn_map_gps" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_ship_blueprint_downButton"
                    android:layout_width="@dimen/map_blueprint_btn_width"
                    android:layout_height="@dimen/map_blueprint_btn_height"
                    android:layout_below="@+id/img_ship_blueprint_zeroButton"
                    android:layout_marginTop="@dimen/elements_vertical_margin_spacing"
                    android:background="?android:selectableItemBackground"
                    app:srcCompat="@drawable/btn_map_toggle_down" />

            </RelativeLayout>

            <EditText
                android:id="@+id/img_btn_ship_blueprint_textXYZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="200dp"
                android:text="Loading coordinates"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/img_btn_ship_blueprint_textBearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="220dp"
                android:text="Loading Bearing"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/img_btn_ship_blueprint_textAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="240dp"
                android:text="Loading status"
                android:textColor="#ffffff" />

        </FrameLayout>

    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_3rd_level_margin"
        android:gravity="center_horizontal">

        <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_initialise_location"
            android:textColor="@color/primary_text_hint_dark_grey" />

    </LinearLayout>

</RelativeLayout>