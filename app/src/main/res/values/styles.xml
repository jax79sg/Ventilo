    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_main_black</item>
    </style>

    <style name="item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Bottom Navigation View -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <!-- Recycler View Header Text -->
    <style name="RecyclerViewHeaderText">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:textSize">@dimen/recycler_row_header_title_text_size</item>
    </style>

    <!-- Floating Action Button -->
    <style name="FloatingActionButton_StyleOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/vertical_3rd_level_margin</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Floating Action Button -->
    <style name="FloatingActionButton_StyleTwo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_alignParentStart">true</item>-->
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- EditTextView -->
    <style name="EditTextView_Main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/edit_text_view_height</item>
        <item name="android:maxHeight">@dimen/edit_text_view_max_height</item>
        <item name="android:maxLines">4</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:padding">@dimen/elements_margin_spacing</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:textColorHint">@color/primary_text_hint_dark_grey</item>
        <item name="android:textColor">@color/text_view_color_selector</item>
    </style>

</resources>
