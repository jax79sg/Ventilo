<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/spinner_width"
        android:height="@dimen/spinner_height">
        <shape
            android:id="@+id/listview_background_shape">
            <stroke
                android:width="1dp"
                android:color="@color/divider_line_secondary_grey" />
            <padding
                android:bottom="1dp"
                android:left="10dp"
                android:right="10dp"
                android:top="1dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/spinner_fill_grey" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/spinner_expand"/>
    </item>
</layer-list>