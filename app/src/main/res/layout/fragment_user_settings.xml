<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_user_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/elements_margin_spacing"
            android:paddingEnd="@dimen/elements_margin_spacing">

            <LinearLayout
                android:id="@+id/layout_user_settings_team_profile_display"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_settings_callsign_team_profile_display_container_height"
                android:background="@drawable/img_btn_background_without_border"
                android:orientation="vertical"
                android:paddingStart="@dimen/elements_larger_margin_spacing"
                android:paddingTop="@dimen/elements_small_margin_spacing"
                android:paddingEnd="@dimen/elements_larger_margin_spacing"
                android:paddingBottom="@dimen/elements_small_margin_spacing"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/elements_small_margin_spacing"
                    android:layout_marginBottom="@dimen/elements_small_margin_spacing"
                    android:orientation="horizontal">

                    <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                        android:layout_width="@dimen/user_settings_callsign_column_width"
                        android:layout_height="wrap_content"
                        android:text="@string/call_sign"
                        android:textColor="@color/primary_highlight_cyan"
                        android:textSize="@dimen/text_view_small_text_size" />

                    <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/elements_larger_margin_spacing"
                        android:text="@string/team_profile"
                        android:textColor="@color/primary_highlight_cyan"
                        android:textSize="@dimen/text_view_small_text_size" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_user_settings_callsign_team_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_small_margin_spacing"
                android:layout_marginBottom="@dimen/elements_small_margin_spacing"
                android:orientation="horizontal">

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                    android:layout_width="@dimen/user_settings_callsign_column_width"
                    android:layout_height="wrap_content"
                    android:text="@string/call_sign"
                    android:textColor="@color/primary_text_grey"
                    android:textSize="@dimen/text_view_small_text_size" />

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/elements_large_margin_spacing"
                    android:text="@string/team_profile"
                    android:textColor="@color/primary_text_grey"
                    android:textSize="@dimen/text_view_small_text_size" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_user_settings_callsign_team_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_user_settings_current_user_callsign"
                    android:layout_width="@dimen/user_settings_callsign_column_width"
                    android:layout_height="@dimen/user_settings_callsign_box_height"
                    android:layout_alignParentStart="true"
                    android:background="@color/background_dark_grey">

                    <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansRegularTextView
                        android:id="@+id/tv_user_settings_current_user_callsign"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/primary_white"
                        android:textSize="@dimen/text_view_text_size" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/elements_large_margin_spacing"
                    android:layout_marginBottom="@dimen/elements_margin_spacing"
                    android:layout_toStartOf="@+id/layout_user_settings_edit_save"
                    android:layout_toEndOf="@+id/layout_user_settings_current_user_callsign"
                    android:animateLayoutChanges="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/layout_user_settings_team_profile_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </HorizontalScrollView>


                <LinearLayout
                    android:id="@+id/layout_user_settings_edit_save"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edit_text_view_height"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/elements_large_margin_spacing"
                    android:gravity="center_vertical">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/img_user_settings_team_profile_edit_save"
                        android:layout_width="@dimen/user_settings_icon_btn_width"
                        android:layout_height="@dimen/user_settings_icon_btn_height"
                        app:srcCompat="@drawable/btn_edit" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_user_settings_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingTop="@dimen/elements_margin_spacing"
                android:paddingBottom="@dimen/elements_margin_spacing">

                <include
                    android:id="@+id/layout_pull_from_excel_text_img_btn"
                    layout="@layout/layout_img_text_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/elements_margin_spacing"
                    android:foreground="?android:selectableItemBackground" />

                <include
                    android:id="@+id/layout_push_to_excel_img_text_img_btn"
                    layout="@layout/layout_img_text_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/elements_margin_spacing"
                    android:foreground="?android:selectableItemBackground" />

                <include
                    android:id="@+id/layout_sync_img_text_img_btn"
                    layout="@layout/layout_img_text_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/elements_margin_spacing"
                    android:foreground="?android:selectableItemBackground" />

                <include
                    android:id="@+id/layout_logout_img_text_img_btn"
                    layout="@layout/layout_img_text_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:selectableItemBackground" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>