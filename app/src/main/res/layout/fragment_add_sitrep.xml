                android:id="@+id/tv_sitrep_new_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/elements_margin_spacing"
                android:text="@string/sitrep_new_title"
                android:textColor="@color/primary_text_white"
                android:textSize="@dimen/text_view_text_size" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sitrep_row_height"
                android:background="@color/spinner_broad_fill_grey"
                android:gravity="end"
                android:orientation="horizontal">

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
