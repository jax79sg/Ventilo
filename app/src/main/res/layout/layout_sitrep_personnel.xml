<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="@dimen/sitrep_personnel_width"
        android:layout_height="@dimen/sitrep_personnel_height"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center|end"
            android:layout_height="@dimen/sitrep_personnel_header_height"
            android:layout_marginBottom="@dimen/elements_margin_spacing"
            android:orientation="horizontal">

            <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                android:id="@+id/tv_sitrep_personnel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/sitrep_personnel"
                android:textColor="@color/primary_text_grey"
                android:textSize="@dimen/text_view_small_text_size" />

            <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                android:id="@+id/tv_sitrep_personnel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/minor_margin"
                android:text="@string/sitrep_T"
                android:textColor="@color/primary_highlight_cyan"
                android:textSize="@dimen/text_view_small_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sitrep_personnel_content_height"
            android:gravity="center"
            android:orientation="horizontal">

            <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansRegularTextView
                android:id="@+id/tv_sitrep_personnel_number"
                android:layout_width="@dimen/sitrep_personnel_content_number_box_width"
                android:layout_height="@dimen/sitrep_personnel_content_number_box_height"
                android:layout_marginEnd="@dimen/elements_margin_spacing"
                android:textColor="@color/primary_white"
                android:background="@drawable/rounded_corner_background"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sitrep_personnel_content_height"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_personnel_add"
                    android:layout_width="@dimen/sitrep_personnel_content_btn_width"
                    android:layout_height="@dimen/sitrep_personnel_content_btn_height"
                    app:srcCompat="@drawable/btn_personnel_add"
                    android:layout_marginBottom="@dimen/elements_margin_spacing"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_personnel_reduce"
                    android:layout_width="@dimen/sitrep_personnel_content_btn_width"
                    android:layout_height="@dimen/sitrep_personnel_content_btn_height"
                    app:srcCompat="@drawable/btn_personnel_reduce"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>