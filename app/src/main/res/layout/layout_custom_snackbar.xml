<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_snackbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout_snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/snackbar_margin_bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_snackbar_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/layout_snackbar_content"
                android:layout_alignTop="@+id/layout_snackbar_content"
                android:background="@drawable/snackbar_info_background"
                android:layout_alignEnd="@id/layout_snackbar_content"
                android:layout_alignBottom="@id/layout_snackbar_content" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_snackbar_background_icon"
                android:layout_width="@dimen/snackbar_side_icon_width"
                android:layout_height="@dimen/snackbar_side_icon_height"
                android:layout_marginStart="@dimen/snackbar_side_icon_margin_start_end"
                android:layout_marginEnd="@dimen/snackbar_side_icon_margin_start_end"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/icon_snackbar_info"/>

            <LinearLayout
                android:id="@+id/layout_snackbar_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/snackbar_padding_start"
                android:paddingTop="@dimen/elements_margin_spacing"
                android:paddingEnd="@dimen/side_margin"
                android:paddingBottom="@dimen/elements_margin_spacing">

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansRegularTextView
                    android:id="@+id/tv_snackbar_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxWidth="250dp"
                    android:maxLines="6"
                    android:text="@string/btn_send"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/text_view_text_size" />

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansRegularTextView
                    android:id="@+id/tv_snackbar_action_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/elements_margin_spacing"
                    android:background="@drawable/snackbar_action_btn_with_text_background"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/elements_margin_spacing"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/text_view_text_size"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_snackbar_action_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/elements_margin_spacing"
                    android:foreground="?android:selectableItemBackground"
                    android:visibility="gone"
                    app:srcCompat="@drawable/snackbar_action_btn_ok_background" />

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansRegularTextView
                    android:id="@+id/tv_snackbar_action_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/elements_margin_spacing"
                    android:background="@drawable/snackbar_action_btn_with_text_background"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/elements_margin_spacing"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/text_view_text_size"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_snackbar_action_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/elements_margin_spacing"
                    android:foreground="?android:selectableItemBackground"
                    android:visibility="gone"
                    app:srcCompat="@drawable/snackbar_action_btn_cancel_background" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>