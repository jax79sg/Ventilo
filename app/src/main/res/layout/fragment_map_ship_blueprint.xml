                <!--</RelativeLayout>-->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/elements_margin_spacing">

                    <include
                        android:id="@+id/layout_map_ship_blueprint_fragment_hazard_icon"
                        layout="@layout/layout_rounded_img_with_img_btn" />

                    <include
                        android:id="@+id/layout_map_ship_blueprint_fragment_deceased_icon"
                        layout="@layout/layout_rounded_img_with_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/elements_margin_spacing"
                        android:layout_toEndOf="@+id/layout_map_ship_blueprint_fragment_hazard_icon" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                    android:id="@+id/tv_map_blueprint_textXYZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_map_blueprint_textBearing"
                    android:layout_marginBottom="@dimen/thin_line_margin"
                    android:text="@string/map_blueprint_loading_coord"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/text_view_text_size" />

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                    android:id="@+id/tv_map_blueprint_textBearing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/elements_margin_spacing"
                    android:text="@string/map_blueprint_loading_bearing"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/text_view_text_size" />

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                    android:id="@+id/tv_map_blueprint_textAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/elements_margin_spacing"
                    android:text="@string/map_blueprint_loading_status"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/text_view_text_size" />

            </RelativeLayout>

        </FrameLayout>

    </FrameLayout>

    <View
        android:id="@+id/view_map_ship_blueprint_middle_divider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:visibility="gone" />

    <HorizontalScrollView
        android:id="@+id/hs_view_map_ship_blueprint_dashboard_fragments"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="335"
        android:animateLayoutChanges="true"
        android:fadeScrollbars="false"
        android:paddingStart="@dimen/elements_large_margin_spacing"
        android:paddingEnd="@dimen/elements_large_margin_spacing"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/fragment_dashboard_video_stream"
                android:name="sg.gov.dsta.mobileC3.ventilo.activity.map.dashboard.videoStream.DashboardVideoStreamFragment"
                android:layout_width="@dimen/dashboard_video_stream_main_container_width"
                android:layout_height="match_parent"
                android:background="@drawable/img_btn_background_without_border" />

            <fragment
                android:id="@+id/fragment_dashboard_sitrep_personnel_status"
                android:name="sg.gov.dsta.mobileC3.ventilo.activity.map.dashboard.sitRepPersonnelStatus.DashboardSitRepPersonnelStatusFragment"
                android:layout_width="@dimen/dashboard_sitrep_personnel_status_main_container_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/elements_large_margin_spacing"
                android:background="@drawable/img_btn_background_without_border" />

            <fragment
                android:id="@+id/fragment_dashboard_task_phase_status"
                android:name="sg.gov.dsta.mobileC3.ventilo.activity.map.dashboard.taskPhaseStatus.DashboardTaskPhaseStatusFragment"
                android:layout_width="@dimen/dashboard_task_phase_status_main_container_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/elements_large_margin_spacing"
                android:background="@drawable/img_btn_background_without_border" />

            <fragment
                android:id="@+id/fragment_dashboard_radio_link_status"
                android:name="sg.gov.dsta.mobileC3.ventilo.activity.map.dashboard.radioLinkStatus.DashboardRadioLinkStatusFragment"
                android:layout_width="@dimen/dashboard_status_link_main_container_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/elements_large_margin_spacing"
                android:background="@drawable/img_btn_background_without_border" />

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:id="@+id/view_map_ship_blueprint_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:visibility="gone" />

</LinearLayout>