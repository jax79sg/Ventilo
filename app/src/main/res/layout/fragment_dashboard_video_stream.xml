<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dashboard_video_stream_fragment"
    android:layout_width="@dimen/dashboard_video_stream_main_container_width"
    android:layout_height="match_parent"
    android:background="@drawable/img_btn_background_without_border"
    android:paddingStart="@dimen/elements_large_margin_spacing"
    android:paddingTop="@dimen/elements_margin_spacing"
    android:paddingEnd="@dimen/elements_large_margin_spacing"
    android:paddingBottom="@dimen/elements_margin_spacing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_dashboard_video_stream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_dashboard_video_stream_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<RelativeLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--<android.support.v7.widget.AppCompatImageView-->
                        <!--android:id="@+id/img_btn_video_stream_setting"-->
                        <!--android:layout_width="@dimen/video_stream_btn_width"-->
                        <!--android:layout_height="@dimen/video_stream_btn_height"-->
                        <!--android:background="?android:selectableItemBackground"-->
                        <!--app:srcCompat="@drawable/btn_setting" />-->

                <!--</RelativeLayout>-->

                <sg.gov.dsta.mobileC3.ventilo.util.component.C2OpenSansSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_video_stream"
                    android:textColor="@color/primary_highlight_cyan"
                    android:textSize="@dimen/text_view_text_size" />

                <Spinner
                    android:id="@+id/spinner_dashboard_video_stream_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/spinner_rect"
                    android:gravity="end"
                    android:spinnerMode="dropdown" />

            </RelativeLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_layout_dashboard_video_surface"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dashboard_video_stream_texture_view_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/elements_margin_spacing"
                android:background="@drawable/img_view_background_with_border"
                android:foregroundGravity="clip_horizontal|clip_vertical"
                tools:ignore="true">

                <TextureView
                    android:id="@+id/texture_view_dashboard_stream"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/thin_line_margin" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>