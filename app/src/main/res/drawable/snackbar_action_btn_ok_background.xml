<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/snackbar_action_btn_width"
        android:height="@dimen/snackbar_action_btn_height">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/background_main_black" />
            <stroke
                android:width="1dp"
                android:color="@color/primary_white" />
        </shape>
    </item>

    <item
        android:width="@dimen/snackbar_ok_action_icon_width"
        android:height="@dimen/snackbar_ok_action_icon_height"
        android:drawable="@drawable/icon_done"
        android:gravity="center" />
</layer-list>